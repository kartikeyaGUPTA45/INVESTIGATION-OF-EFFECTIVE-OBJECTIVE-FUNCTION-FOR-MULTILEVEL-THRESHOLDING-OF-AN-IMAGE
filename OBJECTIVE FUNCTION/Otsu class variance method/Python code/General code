import math
import numpy as np
from matplotlib import pyplot as plt
from PIL import Image

image = Image.open('E:\\lena.tiff').convert("L")#Convert an image into GrayScale
print(image)

thresholds=[97,164]
thresholds.append(256)
thresholds.insert(0,0)

img = np.asarray(image)#Convert given input into array
print(img)

def Hist(img):
    row, col = img.shape 
    y = np.zeros(256,dtype=float)
    for i in range(0,row):
        for j in range(0,col):
             y[img[i,j]] += 1
    x = np.arange(0,256)
    plt.bar(x, y, color='b', width=5, align='edge', alpha=0.25)
    plt.show()
    return y

h=Hist(img)


cnt = 0
for i in range(0, len(h)):
    if h[i]>0:
           cnt += h[i]
            
print(cnt)

for i in range(len(h)):
    print(h[i])
    
for i in range (len(h)):
    h[i]=h[i]/cnt
    
cumulative_sum=[]
cumulative_mean=[]
global_mean=0
Sigma=0

for i in range(len(thresholds)-1):
    cumulative_sum.append(sum(h[thresholds[i]:thresholds[i+1]]))
    
    cumulative=0
    for j in range(thresholds[i],thresholds[i+1]):
        cumulative=cumulative+(j+1)*h[j]
    
    cumulative_mean.append(cumulative/cumulative_sum[-1])
    global_mean=global_mean+cumulative
for i in range(len(cumulative_sum)):
   Sigma = Sigma + (cumulative_sum[i] *((cumulative_mean[i] - global_mean) ** 2))
    
print(Sigma)
